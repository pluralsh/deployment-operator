apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: test-httproute
  namespace: default
  labels:
    app: test-app
spec:
  parentRefs:
  - name: test-gateway
    namespace: default
  hostnames:
  - api.test.example.com
  - api-v2.test.example.com
  rules:
  - matches:
    - path:
        type: PathPrefix
        value: /
    backendRefs:
    - name: test-app
      port: 80