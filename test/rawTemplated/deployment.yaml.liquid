apiVersion: apps/v1
kind: Deployment
metadata:
  name: test-deployment
  namespace: default
  labels:
    app: test-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: test-app
  template:
    metadata:
      labels:
        app: test-app
    spec:
      containers:
        - name: nginx
          image: nginx:1.21
          ports:
            - containerPort: 80
        - name: redis
          image: redis:6.2-alpine
          ports:
            - containerPort: 6379
      initContainers:
        - name: init
          image: busybox:1.35
          command: ['sh', '-c', 'echo "init container"']